<h1>Listing Task</h1>

<table class="table table-hover">

  <thead>
    <tr>
      <th>Task</th>
      <th>Task item</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.Task %></td>
        <td><%= model.task_item %></td>
        <td><%= link_to 'Show', model %></td>
        <td><%= link_to 'edit', edit_model_path(model) %></td>
        <td><%= link_to 'Delete', model, method: :delete, data: { confirm: 'To hell with this? ' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

